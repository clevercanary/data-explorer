{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "lib",
    "declaration": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
